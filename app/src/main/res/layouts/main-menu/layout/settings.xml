<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewBassBoost"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/timeburner"
            android:text="@string/bass_boost"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/seekBarBassBoost"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textViewSurroundSound"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/timeburner"
            android:text="@string/surround_sound"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/seekBarSurroundSound"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textViewPresets"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/timeburner"
            android:text="@string/presets"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerPresets"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:entries="@array/presets_array"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMinusTendB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/timeburner"
                android:paddingStart="50dp"
                android:paddingEnd="40dp"
                android:text="@string/minus_ten_db"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewZerodB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/timeburner"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="@string/zero_db"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewTendB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/timeburner"
                android:paddingStart="40dp"
                android:paddingEnd="0dp"
                android:text="@string/ten_db"
                android:textColor="@color/blue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewSixtyHz"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/timeburner"
                android:text="@string/sixty_hz"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBarSixtyHz"
                android:layout_width="290dp"
                android:layout_height="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewTwoThirtyHz"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/timeburner"
                android:text="@string/two_thirty_hz"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBarTwoThirtyHz"
                android:layout_width="290dp"
                android:layout_height="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewNineTenHz"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/timeburner"
                android:text="@string/nine_ten_hz"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBarNineTenHz"
                android:layout_width="290dp"
                android:layout_height="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewFourkHz"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/timeburner"
                android:text="@string/four_khz"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBarFourkHz"
                android:layout_width="290dp"
                android:layout_height="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewFourteenkHz"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/timeburner"
                android:text="@string/fourteen_khz"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBarFourteenkHz"
                android:layout_width="290dp"
                android:layout_height="25dp"
                android:rotation="0" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBannerSettings"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>